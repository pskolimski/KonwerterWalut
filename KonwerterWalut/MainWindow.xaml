<Window x:Class="KonwerterWalut.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KonwerterWalut"
        mc:Ignorable="d"
        Title="Konwerter Walut - Autor: 12345678901"
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F0FFF0"
        ResizeMode="CanResize">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#006400" Padding="15" Margin="0,0,0,20">
            <TextBlock Text="Konwerter Walut. Autor Patryk Skolimowski" Foreground="White" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <Border Grid.Row="1" Grid.Column="0" BorderBrush="#228B22" BorderThickness="2" Padding="15" Margin="0,0,15,0" CornerRadius="8">
            <StackPanel>
                <TextBlock Text="Dane konwersji" FontWeight="Bold" FontSize="16" Foreground="#006400" Margin="0,0,0,15"/>

                <TextBlock Text="Waluta źródłowa:" Foreground="#006400" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="comboSourceCurrency" Height="35" BorderBrush="#228B22" BorderThickness="2" SelectedIndex="0" Margin="0,0,0,15">
                    <ComboBoxItem Content="🇵🇱 PLN - Polski Złoty" Tag="PLN"/>
                    <ComboBoxItem Content="🇪🇺 EUR - Euro" Tag="EUR"/>
                    <ComboBoxItem Content="🇺🇸 USD - Dolar Amerykański" Tag="USD"/>
                    <ComboBoxItem Content="🇬🇧 GBP - Funt Brytyjski" Tag="GBP"/>
                </ComboBox>

                <TextBlock Text="Kwota do przeliczenia:" Foreground="#006400" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtAmount" Height="35" BorderBrush="#228B22" BorderThickness="2" Margin="0,0,0,15" HorizontalContentAlignment="Right"/>

                <TextBlock Text="Waluta docelowa:" Foreground="#006400" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="comboTargetCurrency" Height="35" BorderBrush="#228B22" BorderThickness="2" SelectedIndex="1" Margin="0,0,0,15">
                    <ComboBoxItem Content="🇵🇱 PLN - Polski Złoty" Tag="PLN"/>
                    <ComboBoxItem Content="🇪🇺 EUR - Euro" Tag="EUR"/>
                    <ComboBoxItem Content="🇺🇸 USD - Dolar Amerykański" Tag="USD"/>
                    <ComboBoxItem Content="🇬🇧 GBP - Funt Brytyjski" Tag="GBP"/>
                </ComboBox>

                <Button x:Name="btnConvert" Content="PRZELICZ WALUTĘ" Height="45" FontWeight="Bold" FontSize="16" Foreground="White" Margin="0,15,0,0">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#32CD32" Offset="0"/>
                            <GradientStop Color="#228B22" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>

                <Button x:Name="btnClear" Content="WYCZYŚĆ DANE" Height="45" FontWeight="Bold" FontSize="16" Foreground="White" Margin="0,10,0,0">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#FF6347" Offset="0"/>
                            <GradientStop Color="#DC143C" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Grid.Column="1" BorderBrush="#228B22" BorderThickness="2" Padding="15" Margin="15,0,0,0" CornerRadius="8">
            <StackPanel>
                <TextBlock Text="Wyniki i kursy walut" FontWeight="Bold" FontSize="16" Foreground="#006400" Margin="0,0,0,15"/>

                <!-- Panel wyników konwersji -->
                <Border Background="#F0FFF0" BorderBrush="#228B22" BorderThickness="2" CornerRadius="8" Padding="20" Margin="0,0,0,15" Opacity="0.9">
                    <StackPanel>
                        <TextBlock x:Name="lblResult" Text="Wynik konwersji: " FontWeight="Bold" FontSize="16" Foreground="#006400" Background="White" Padding="10" Margin="0,0,0,10"/>
                        <TextBlock x:Name="lblFee" Text="Opłata za wymianę: " FontWeight="Bold" FontSize="14" Foreground="#006400" Background="White" Padding="10" Margin="0,0,0,10"/>
                        <TextBlock x:Name="lblRate" Text="Kurs wymiany: " FontWeight="Bold" FontSize="14" Foreground="#006400" Background="White" Padding="10"/>
                    </StackPanel>
                </Border>

                <!-- Tabela kursów walut -->
                <Border Background="White" BorderBrush="#228B22" BorderThickness="2" CornerRadius="8" Padding="0" Margin="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <!-- Nagłówek tabeli -->
                        <Border Grid.Row="0" Grid.ColumnSpan="3" Background="#228B22" Padding="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Waluta" Foreground="White" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" Grid.Column="0"/>
                                <TextBlock Text="Kurs (PLN)" Foreground="White" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" Grid.Column="1"/>
                                <TextBlock Text="Zmiana" Foreground="White" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" Grid.Column="2"/>
                            </Grid>
                        </Border>
                        <!-- Wiersze danych -->
                        <Border Grid.Row="1" Grid.ColumnSpan="3" Background="#f9fff9" Padding="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="EUR" FontSize="14" HorizontalAlignment="Center"/>
                                <TextBlock Text="4.3205" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Grid.Column="1"/>
                                <TextBlock Text="↑ 0.12%" FontSize="14" Foreground="Green" HorizontalAlignment="Center" Grid.Column="2"/>
                            </Grid>
                        </Border>
                        <Border Grid.Row="2" Grid.ColumnSpan="3" Background="White" Padding="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="USD" FontSize="14" HorizontalAlignment="Center"/>
                                <TextBlock Text="3.9847" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Grid.Column="1"/>
                                <TextBlock Text="↓ 0.08%" FontSize="14" Foreground="Red" HorizontalAlignment="Center" Grid.Column="2"/>
                            </Grid>
                        </Border>
                        <Border Grid.Row="3" Grid.ColumnSpan="3" Background="#f9fff9" Padding="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="GBP" FontSize="14" HorizontalAlignment="Center"/>
                                <TextBlock Text="5.1523" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Grid.Column="1"/>
                                <TextBlock Text="↑ 0.23%" FontSize="14" Foreground="Green" HorizontalAlignment="Center" Grid.Column="2"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>
